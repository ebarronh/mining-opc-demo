# Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# OPC UA Server Configuration
OPC_UA_PORT=4840
OPC_UA_ENDPOINT_PATH=/mining-demo
OPC_UA_SERVER_NAME=MineSensors Mining Demo Server
OPC_UA_APPLICATION_URI=urn:mining-demo:opcua-server

# WebSocket Configuration
WEBSOCKET_PORT=4841
WEBSOCKET_PATH=/ws

# Security Configuration
OPC_UA_SECURITY_POLICY=None
OPC_UA_SECURITY_MODE=None
OPC_UA_CERTIFICATE_PATH=./certificates
OPC_UA_PRIVATE_KEY_PATH=./certificates

# Mining Equipment Simulation
EXCAVATOR_COUNT=2
TRUCK_COUNT=5
CONVEYOR_COUNT=3
SIMULATION_INTERVAL_MS=2000

# Grade Control Settings
MIN_GRADE=0.5
MAX_GRADE=8.0
HIGH_GRADE_THRESHOLD=3.5

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/backend.log

# Database (for future phases)
# DATABASE_URL=postgresql://mining_user:password@localhost:5432/mining_demo
# REDIS_URL=redis://localhost:6379

# External System Integration
# FMS_API_URL=http://localhost:8080/api/v1
# SCADA_SYSTEM_URL=opc.tcp://localhost:4842