# Root Environment Variables for Mining OPC UA Demo

# Node.js Environment
NODE_ENV=development

# Application Ports
FRONTEND_PORT=3000
BACKEND_PORT=3001
OPC_UA_PORT=4840
WEBSOCKET_PORT=4841

# Database Configuration (for future phases)
# DATABASE_URL=postgresql://username:password@localhost:5432/mining_demo

# OPC UA Configuration
OPC_UA_ENDPOINT=opc.tcp://localhost:4840/mining-demo
OPC_UA_SECURITY_POLICY=None
OPC_UA_SECURITY_MODE=None

# Mining Simulation Settings
MINE_SIMULATION_ENABLED=true
EQUIPMENT_COUNT=5
GRADE_SIMULATION_INTERVAL=2000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# External APIs (for future integration)
# FMS_API_URL=http://localhost:8080/api/v1
# SCADA_API_URL=http://localhost:8081/api/v1

# Development Settings
HOT_RELOAD=true
DEBUG_MODE=true